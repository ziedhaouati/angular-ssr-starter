pipeline {
    agent any
    stages {
        stage('SCM') {
            steps {
              git branch: 'SP2', url: 'git@github.com:kalyan11021980/angular-ssr-starter.git'
            }
        }
        stage('Install node modules') {
            steps {
                sh "npm install"
            }
        }
        stage('Build') {
            steps {
                sh "npm run build:ssr"
            }
        }
         stage('Deploy') {
            steps {
                 sh "pm2 restart all"
            }
        }
    }
}
